---
import Nav from "../components/Nav.astro";

const {
  frontmatter: { title = "Brese", description },
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/reset.css" />
    <link rel="stylesheet" href="/main.css" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Nav />

      <h1>{title}</h1>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  h1 {
    padding-bottom: 1lh;
  }
</style>
