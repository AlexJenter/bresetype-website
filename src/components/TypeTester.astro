---
const html = await Astro.slots.render("default");
const content = html.replace(/(<([^>]+)>)/gi, "");
const {
  familyName,
  fontSize,
  styleName,
  columns = 1,
  axes,
  variableSettings,
} = Astro.props;
---

<fontdue-type-tester
  family-name={familyName}
  style-name={styleName}
  content={content}
  font-size={fontSize}
  style=`--font-size:${fontSize}`
  axes={axes}
  variable-settings={variableSettings}
>
</fontdue-type-tester>

<style define:vars={{ columns }} is:global lang="scss">
  fontdue-type-tester p,
  fontdue-type-tester span[data-text] {
    display: inline-block;
    columns: var(--columns);
  }
</style>
