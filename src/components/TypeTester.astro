---
const html = await Astro.slots.render("default");
const content = html.replace(/(<([^>]+)>)/gi, "");
const { familyName, fontSize, styleName, columns = 1 } = Astro.props;
---

<fontdue-type-tester
  family-name={familyName}
  style-name={styleName}
  content={content}
  font-size={fontSize}
  style=`--font-size:${fontSize}`
>
  <slot />
</fontdue-type-tester>

<style define:vars={{ columns }} is:global>
  fontdue-type-tester p,
  fontdue-type-tester span[data-text] {
    display: inline-block;
    columns: var(--columns);
  }
</style>
