---
const html = await Astro.slots.render("default");
const content = html.replace(/(<([^>]+)>)/gi, "");
const { familyName, fontSize, styleName } = Astro.props;
---

<fontdue-type-tester
  family-name={familyName}
  style-name={styleName}
  content={content}
  font-size={fontSize}
>
  <slot />
</fontdue-type-tester>

<style>
  fontdue-type-tester p {
    font-family: "Quince AI Regular";
    font-style: normal;
    font-weight: 400;
    font-size: 172px;
  }
</style>
